@model HomeDetaisViewModel

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee Deatils";
    var imgPath = "~/images/" + (Model.Employee.ImagePath ?? "220px-User_icon_2.svg.png");
}

    <div class="row justify-content-center m-3">
        <div class="col-sm-8">

            <div class="card">
                <div class="card-header">
                    <h3>@Model.Employee.Name</h3>
                </div>
                <div class="card-body text-center">
                    <div class="card m-3"><img class="imageThumbnail" src="@imgPath" asp-append-version="true" /></div>
                    <h4>Employee ID: @Model.Employee.Id</h4>
                    <h4>Employee Email: @Model.Employee.Email</h4>
                    <h4>Employee Department: @Model.Employee.Department</h4>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home"asp-action="index" class="btn btn-primary">Back</a>
                    <a asp-controller="home"asp-action="edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                 </div>
            </div>
        </div>
        

    </div>
