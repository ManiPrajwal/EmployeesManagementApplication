@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "All Users";
}
<h1>All Users</h1>

@if (Model.Any())
{
    <a class="btn btn-primary" style="width:auto" asp-action="Register" asp-controller="Account">
        Add a new user
    </a>
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id: @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @user.UserName
                </h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" style="width:auto" asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id">Edit</a>
                <a class="btn btn-danger" href="#" style="width:auto">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No User created yet.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-action="Register" asp-controller="Account">
                Add a new user
            </a>
        </div>
        <div class="card-footer">

        </div>
    </div>
}
